/**
 * Implements hook_entity_info_alter().
 *
 * We are adding the info about the coap_resource_value types via a hook to avoid a recursion
 * issue as loading the coap_resource_value types requires the entity info as well.
 *
 * @todo This needs to be improved
 */
function coap_resource_value_entity_info_alter(&$entity_info) {
  foreach (coap_resource_value_get_types() as $type => $info) {
    $entity_info['coap_resource_value']['bundles'][$type] = array(
      'label' => $info->label,
      'admin' => array(
        'path' => 'admin/structure/coap_resource_value_types/manage/%coap_resource_value_type',
        'real path' => 'admin/structure/coap_resource_value_types/manage/' . $type,
        'bundle argument' => 4,
        'access arguments' => array('administer coap_resource_value types'),
      ),
    );
  }
}
  

/**
 * Implements hook_permission().
 */
function coap_resource_value_permission() {
  // We set up permisssions to manage entity types, manage all entities and the
  // permissions for each individual entity
  $permissions = array(
    'administer coap_resource_value types' => array(
      'title' => t('Administer coap_resource_value types'),
      'description' => t('Create and delete fields for coap_resource_value types, and set their permissions.'),
    ),
    'administer coap_resource_values' => array(
      'title' => t('Administer coap_resource_values'),
      'description' => t('Edit and delete all coap_resource_values'),
    ),  
  );
  
  //Generate permissions per coap_resource_value 
  foreach (coap_resource_value_get_types() as $type) {
    $type_name = check_plain($type->type);
    $permissions += array(
      "edit any $type_name coap_resource_value" => array(
        'title' => t('%type_name: Edit any coap_resource_value', array('%type_name' => $type->label)),
      ),
      "view any $type_name coap_resource_value" => array(
        'title' => t('%type_name: View any coap_resource_value', array('%type_name' => $type->label)),
      ),
    );
  }
  return $permissions;  
}


/**
 * Determines whether the given user has access to a coap_resource_value.
 *
 * @param $op
 *   The operation being performed. One of 'view', 'update', 'create', 'delete'
 *   or just 'edit' (being the same as 'create' or 'update').
 * @param $coap_resource_value
 *   Optionally a coap_resource_value or a coap_resource_value type to check access for. If nothing is
 *   given, access for all coap_resource_values is determined.
 * @param $account
 *   The user to check for. Leave it to NULL to check for the global user.
 * @return boolean
 *   Whether access is allowed or not.
 */
function coap_resource_value_access($op, $coap_resource_value = NULL, $account = NULL) {
  if (user_access('administer coap_resource_values', $account)) {
    return TRUE;
  }
  if (isset($coap_resource_value) && $type_name = $coap_resource_value->type) {
    $op = ($op == 'view') ? 'view' : 'edit';
    if (user_access("$op any $type_name coap_resource_value", $account)) {
      return TRUE;
    }
  }
  return FALSE;
}


/**
 * Access callback for the entity API.
