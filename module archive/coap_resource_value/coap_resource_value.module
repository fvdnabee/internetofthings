/**
 * Gets an array of all coap_resource_value types, keyed by the type name.
 *
 * @param $type_name
 *   If set, the type with the given name is returned.
 * @return Coap_resource_valueType[]
 *   Depending whether $type isset, an array of coap_resource_value types or a single one.
 */
function coap_resource_value_get_types($type_name = NULL) {
  // entity_load will get the Entity controller for our coap_resource_value entity and call the load
  // function of that object - we are loading entities by name here.
  $types = entity_load_multiple_by_name('coap_resource_value_type', isset($type_name) ? array($type_name) : FALSE);
  return isset($type_name) ? reset($types) : $types;
}


/**
