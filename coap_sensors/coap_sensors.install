function coap_sensors_disable(){
  $sql = 'SELECT nid FROM {node} n WHERE n.type = :type';
  $result = db_query($sql, array(':type' => 'coap_sensors'));
  $nids = array();
  foreach ($result as $row) {
    $nids[] = $row->nid;
  }
  
  //delete any  variables made by module
  variable_del('comment_coap_sensors');
  variable_del('node_preview_coap_sensors');
  variable_del('node_submitted_coap_sensors');
  variable_del('node_options_coap_sensors');
 
  // Delete all the nodes at once
  node_delete_multiple($nids);
 
  $instance = array('field_name' => 'comment_body','bundle' => 'comment_node_coap_sensors','entity_type' => 'comment');
  field_delete_instance($instance);
 
  $instance = array('field_name' => 'body','bundle' => 'coap_sensors','entity_type' => 'node');
  field_delete_instance($instance);
  
  //deleting content type
  node_type_delete('coap_sensors');
  node_types_rebuild();
  
  // Purge all field infromation
   field_purge_batch(1000);
}